{
	"variables": {
		"availability_zone": "{{ env `AVAILABILITY_ZONE` }}",
		"instance_type": "t2.nano",
		"region": "{{ env `AWS_REGION` }}",
		"security_group_id": "{{ env `INSTANCE_SECURITY_GROUP` }}",
		"ssh_user": "ec2-user",
		"subnet_id": "{{ env `INSTANCE_SUBNET` }}",
		"vpc_id": "{{ env `INSTANCE_VPC` }}"
	},
	"provisioners": [
		{
			"type": "shell",
			"inline": [
				"echo hi",
				"sudo echo oh"
			]
		},
		{
			"type": "ansible",
			"playbook_file": "playbook.yaml",
			"user": "{{ user `ssh_user` }}"
		}
	],
	"builders": [
		{
			"associate_public_ip_address": false,
			"availability_zone": "{{ user `region` }}{{ user `availability_zone` }}",
			"instance_type": "{{ user `instance_type` }}",
			"region": "{{ user `region` }}",
			"security_group_id": "{{ user `security_group_id` }}",
			"source_ami_filter": {
				"filters": {
					"name": "amzn-ami-*-ebs",
					"root-device-type": "ebs",
					"virtualization-type": "hvm"
				},
				"owners": [
					"137112412989"
				],
				"most_recent": true
			},
			"ssh_interface": "private_ip",
			"ssh_keypair_name": "music-packer",
			"ssh_private_key_file": "../music-packer.pem",
			"ssh_username": "{{ user `ssh_user` }}",
			"subnet_id": "{{ user `subnet_id` }}",
			"type": "amazon-ebsvolume",
			"vpc_id": "{{ user `vpc_id` }}"
		}
	]
}
