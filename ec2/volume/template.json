{
	"variables": {
		"availability_zone": "{{ env `AVAILABILITY_ZONE` }}",
		"instance_profile": "{{ env `INSTANCE_PROFILE` }}",
		"instance_type": "t2.nano",
		"region": "{{ env `AWS_REGION` }}",
		"security_group_ids": "{{ env `INSTANCE_SECURITY_GROUPS` }}",
		"source_bucket": "{{ env `SOURCE_BUCKET` }}",
		"ssh_user": "ec2-user",
		"subnet_id": "{{ env `INSTANCE_SUBNET` }}",
		"vpc_id": "{{ env `INSTANCE_VPC` }}"
	},
	"provisioners": [
		{
			"type": "shell",
			"script": "provision.sh"
		}
	],
	"builders": [
		{
			"type": "amazon-ebsvolume",
			"associate_public_ip_address": false,
			"availability_zone": "{{ user `region` }}{{ user `availability_zone` }}",
			"ebs_volumes": [
				{
					"delete_on_termination": false,
					"device_name": "/dev/xvdf",
					"volume_size": 1,
					"volume_type": "gp2"
				}
			],
			"iam_instance_profile": "{{ user `instance_profile` }}",
			"instance_type": "{{ user `instance_type` }}",
			"region": "{{ user `region` }}",
			"run_tags": {
				"Packer": "music-volume"
			},
			"security_group_ids": "{{ user `security_group_ids` }}",
			"source_ami_filter": {
				"filters": {
					"name": "amzn-ami-hvm-*-ebs",
					"root-device-type": "ebs",
					"virtualization-type": "hvm"
				},
				"owners": [
					"137112412989"
				],
				"most_recent": true
			},
			"ssh_interface": "private_ip",
			"ssh_keypair_name": "music-packer",
			"ssh_private_key_file": "../music-packer.pem",
			"ssh_username": "{{ user `ssh_user` }}",
			"subnet_id": "{{ user `subnet_id` }}",
			"vpc_id": "{{ user `vpc_id` }}"
		}
	]
}
