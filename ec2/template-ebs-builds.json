{
	"variables": {
		"ami": "{{ env `INSTANCE_AMI` }}",
		"device_name": "/dev/xvdf",
		"instance_type": "t2.micro",
		"region": "{{ env `AWS_REGION` }}",
		"security_group_ids": "{{ env `INSTANCE_SECURITY_GROUPS` }}",
		"size": "{{ env `SIZE` }}",
		"ssh_user": "root",
		"subnet_id": "{{ env `INSTANCE_SUBNET` }}",
		"vpc_id": "{{ env `INSTANCE_VPC` }}"
	},
	"provisioners": [
		{
			"type": "ansible",
			"playbook_file": "playbook-ebs-builds.yaml",
			"groups": [
				"common"
			],
			"user": "{{ user `ssh_user` }}",
			"extra_arguments": [
				"-vv",
				"--extra-vars",
				"device_name={{ user `device_name` }}"
			]
		}
	],
	"builders": [
		{
			"type": "amazon-ebsvolume",
			"associate_public_ip_address": false,
			"ebs_volumes": [
				{
					"device_name": "{{ user `device_name` }}",
					"volume_size": "{{ user `size` }}",
					"tags": {
						"vibes": "builds"
					}
				}
			],
			"instance_type": "{{ user `instance_type` }}",
			"region": "{{ user `region` }}",
			"run_tags": {
				"Packer": "vibes-ebs-builds"
			},
			"security_group_ids": "{{ user `security_group_ids` }}",
			"source_ami": "{{ user `ami` }}",
			"ssh_interface": "private_ip",
			"ssh_keypair_name": "vibes-packer",
			"ssh_private_key_file": "vibes-packer.pem",
			"ssh_username": "{{ user `ssh_user` }}",
			"subnet_id": "{{ user `subnet_id` }}",
			"vpc_id": "{{ user `vpc_id` }}"
		}
	],
	"post-processors": [
		{
			"type": "manifest",
			"output": "manifest.json",
			"strip_path": true
		}
	]
}
